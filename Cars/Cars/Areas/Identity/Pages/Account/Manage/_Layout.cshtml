@{
    Layout = ViewData.TryGetValue("ParentLayout", out var parentLayout) ? 
        parentLayout?.ToString() : 
        "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h2>Zarządzaj kontem</h2>

<div>
    <h4>Zmień ustawienia Twojego konta</h4>
    <hr/>
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav"/>

        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", false)
}