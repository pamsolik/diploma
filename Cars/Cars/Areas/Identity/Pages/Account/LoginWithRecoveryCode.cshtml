@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Weryfikacja kodu odzyskiwania";
}

<h1>@ViewData["Title"]</h1>
<hr/>
<p>
    Zalogowano za pomocą kodu odzyskiwania. Ten login nie zostanie zapamiętany, dopóki nie zostanie podany
    kod aplikacji uwierzytelniającej podczas logowania lub dwuskładnikowe uwierzytelnienie nie zostanie wyłączone.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}